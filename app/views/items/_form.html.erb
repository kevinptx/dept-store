<h1><%= @item.id ? "Edit Item" : "New Item" %></h1>
<hr />
<%= form_with model: [@department, @item] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true, placeholder: "Name" %>
  <%= f.label :price %>
  <%= f.number_field :price, required: true, autofocus: true, placeholder: "Price" %>
  <%= f.submit %>
<% end %>