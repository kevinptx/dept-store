<h1><%= @department.name %> - <%= @item.name %></h1>
<p><%=@item.price%></p>
<%= link_to 'Edit Item', edit_department_item_path(@department, @item) %>
<%= link_to 'Delete Item', department_item_path(@department, @item), method: :delete %>
<%= link_to 'Back to Items', department_items_path(@department) %>

<%= link_to 'Add Comment', new_item_comment_path(@item)	 %>

<% @item.comments.each do |c| %>
<%= render "comments/comment", { comment: c } %>
<% end %>